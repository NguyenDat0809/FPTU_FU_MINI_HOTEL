<Window x:Class="MiniHotelManagement.FormatSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniHotelManagement"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        Title="FormatSelectWindow" Height="150" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Select a format:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="JSON" Width="80" Margin="5" Click="JsonButton_Click"/>
                <Button Content="XML" Width="80" Margin="5" Click="XmlButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
